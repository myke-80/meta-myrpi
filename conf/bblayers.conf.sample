# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
    ${HOME}/source/poky-rocko/meta \
    ${HOME}/source/poky-rocko/meta-poky \
    ${HOME}/source/poky-rocko/meta-openembedded/meta-oe \
    ${HOME}/source/poky-rocko/meta-openembedded/meta-multimedia \
    ${HOME}/source/poky-rocko/meta-openembedded/meta-networking \
    ${HOME}/source/poky-rocko/meta-openembedded/meta-perl \
    ${HOME}/source/poky-rocko/meta-openembedded/meta-python \
    ${HOME}/source/poky-rocko/meta-qt5 \
    ${HOME}/source/poky-rocko/meta-raspberrypi \
    ${HOME}/source/poky-rocko/meta-security \
    ${HOME}/source/rpi/meta-rpi \
    ${HOME}/source/myke/meta-myrpi \
"
